<%= form_for(@user, data: { turbo: false }, html:{class:"mx-auto grid max-w-screen-md gap-4"}) do |f| %>
    
    <%# =================ADD PHOTOS======================= %>
        <div class="sm:col-span-2">
            <label for="image" class="mb-2 inline-block text-sm text-gray-800 sm:text-base">Image/s</label>
            <%= image_tag(f.object.image_url, class:"w-32 h-32") if f.object.cached_image_data %>
            <%= f.hidden_field :image, value: f.object.cached_image_data %>
            <%= f.file_field :image, class: "h-10 w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

    <div class="inline-block">
        <%= f.label :email, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        <% @user.errors.full_messages_for(:email).each do |message| %>
                <div class="text-red-500"><%= message %></div>
        <% end %>
    </div>

    <div class="flex items-start">
        <div class="w-1/2 mr-1">
            <%= f.label :first_name, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring"   %>
            <% @user.errors.full_messages_for(:first_name).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>

        <div class="w-1/2 ml-1">
            <%= f.label :last_name, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
            <% @user.errors.full_messages_for(:last_name).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>
    </div>

    <div class="flex items-start">
        <div class="w-1/2 mr-1">
            <%= f.label :contact_number, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
            <%= f.text_field :contact_number, autofocus: true, autocomplete: "contact_number", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
            <% @user.errors.full_messages_for(:contact_number).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>

        <div class="w-1/2 ml-1">
            <%= f.label :role_id, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
            <%= f.collection_select :role_id, Role.all,:id,:name,
            {prompt:"Select admin role"}, 
            {class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring"}  %>
            <% @user.errors.full_messages_for(:role_id).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>
    </div>

  <div class="field">
    <%= f.label :password, class:"mb-1 inline-block text-sm text-gray-800 sm:text-base" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="text-red-500"><%= message %></div>
            <% end %>
  </div>

  <div class="flex">
    <button type="submit" class="w-full mx-auto rounded-lg py-3 px-5 bg-green-700 hover:bg-green-800 text-white inline-block font-medium cursor-pointer"">Submit</button>
  </div>
<% end %>
