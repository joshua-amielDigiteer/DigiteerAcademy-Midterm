<div class="flex flex-col mx-32">
  <div class="flex flex-row items-center justify-between pb-1">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to "Back", products_path, class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-900 text-white inline-block font-medium cursor-pointer" %>
  </div>
  <div class="mx-auto pt-5">

    <div class="flex flex-col bg-white border shadow-sm rounded-xl mx-32">
      <div class="overflow-auto p-4 md:p-5">
        <h3 class="text-lg font-bold text-gray-800">
          <%= @product.name.upcase %>
        </h3>
        <p class="mt-2 text-gray-800 mb-3">
          <span><strong>Product Type:</strong> <%= @product.product_type.name %></span> 
        </p>
        <p class="mt-2 text-gray-800 mb-3">
          <span><strong>Product Category:</strong> <%= @product.product_category.name %></span> 
        </p>
        <p class="mt-2 text-gray-800 mb-3">
          <%= @product.description%>
        </p>
        <p class="mt-2 text-gray-800 mb-3">
          <%= number_to_currency(@product.price, unit: "â‚±") %>
        </p>
        <p class="mt-2 text-gray-800 mb-3">
          <span><strong>Product SKU:</strong></span>
        </p>
        
        <% @sku.each do |sku| %>  
          <p class="mt-2 text-gray-800 mb-3">
            <span>Code => <%= sku[0] %> </span> <span>, Color => <%= sku[1] %> </span>
          </p>
        <%end%>

        <% if @product.active %>        
            <span class="shrink-0 items-center space-x-1.5 text-xm font-semibold px-3 py-1 rounded-full text-emerald-800 bg-emerald-100 false">
            <span class="whitespace-nowrap mx-auto">Active</span>
            </span>       
        <% else %>
            <span class="shrink-0 items-center space-x-1.5 text-xm font-semibold px-3 py-1 rounded-full text-slate-800 bg-slate-100 false">
              <span class="whitespace-nowrap">Inactive</span>
            </span>
        <%end%>
        <div>
          <% if @product.images.attached? %>
            <div id="controls-carousel" class="relative w-full mt-3" data-carousel="static">
              <!-- Carousel wrapper -->
              <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
                <!-- Item 1 -->
                <% @product.images.each do |image| %> 
                <div class="hidden duration-700 ease-in-out" data-carousel-item>
                    <%= image_tag(image, class:"absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2", alt:"...")%>
                </div>
                <%end%> 
              </div> 
              <!-- Slider controls -->
              <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
                  <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                      <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                      </svg>
                      <span class="sr-only">Previous</span>
                  </span>
              </button>
              <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
                  <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                      <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                      </svg>
                      <span class="sr-only">Next</span>
                  </span>
              </button>
            </div>
  
          <%else%>
            <span>No images to show.</span>
          <%end%>
        </div>
      </div>
      <div class="bg-gray-100 border-t rounded-b-xl py-3 px-4 md:py-4 md:px-5 ">
        <p class="mt-1 text-sm text-gray-500 ">
          Created on: <%= @product.created_at.to_formatted_s(:long)%>
        </p>
      </div>
    </div>

  </div>
</div>  



        
         
        
   

    



